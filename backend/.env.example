# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/certificate-system

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB in bytes

# Rate Limiting
RATE_LIMIT_MAX=100  # Maximum requests per 15 minutes

# Logging
LOG_LEVEL=info  # Available levels: error, warn, info, debug

# Note: This is an example configuration file.
# Copy this file to .env and update the values according to your environment.
# Make sure to keep your actual .env file secure and never commit it to version control.